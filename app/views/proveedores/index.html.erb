<div class="card border-primary">
  <div class="card-header">
    <h3>Listado de Proveedores</h3>  
  </div>
  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th class="text-center">Ruc</th>
          <th class="text-center">Nombre</th>
          <th class="text-center">Telefono</th>
          <th class="text-center">Email</th>
          <th class="text-center">Nombre Contacto</th>
          <th class="text-center">Telefono Contacto</th>
          <th class="text-center">Opciones</th>
        </tr>
      </thead>

      <tbody>
        <% @proveedores.each do |proveedor| %>
          <tr>
            <td><%= proveedor.ruc_proveedor %></td>
            <td><%= proveedor.nombre_proveedor %></td>
            <td class="text-center"><%= proveedor.telefono_proveedor %></td>
            <td class="text-center"><%= proveedor.email_proveedor %></td>
            <td class="text-center"><%= proveedor.nombre_contacto_proveedor %></td>
            <td class="text-center"><%= proveedor.telefono_contacto_proveedor %></td>
            <td class="text-center">
              <%= link_to  proveedor, class: 'btn btn-success btn-sm', "data-toggle" => "tooltip", "data-placement" => "top", title: "Ver Detalles" do %>
                <i class="fas fa-search"></i> 
              <% end %>
              <%= link_to  edit_proveedor_path(proveedor), class: 'btn btn-warning btn-sm', "data-toggle" => "tooltip", "data-placement" => "top", title: "Editar" do %>
                <i class="fas fa-pencil-alt"></i> 
              <% end %>
              <%= link_to  proveedor, method: :delete, data: { confirm: "Estas seguro/a que quierer eliminar?" }, class: 'btn btn-danger btn-sm', "data-toggle" => "tooltip", "data-placement" => "top", title: "Eliminar" do %>
                <i class="fas fa-trash-alt"></i> 
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  
  </div>
  <div class="card-footer">
    <%= link_to 'Nuevo Proveedor', new_proveedor_path, class: "btn btn-primary" %>
  </div>
</div>
